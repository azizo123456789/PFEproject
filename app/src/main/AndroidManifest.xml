<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pfeproject">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_afar_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_afar_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.PfeProject.NoActionBar"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.EntrepriseDetailActivity"/>
        <activity android:name=".ui.UserPanierActivity" />
        <activity android:name=".ui.UserPointActivity" />
        <activity android:name=".ui.UserHistoryActivity" />
        <activity android:name=".ui.UserProfileActivity" />
        <activity android:name=".ui.ArticleItemActivity" />
        <activity android:name=".ui.HomeActivity" android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".ui.ForgetPasswordActivity" />
        <activity android:name=".ui.SignUpActivity" />
        <activity android:name=".ui.SignInActivity" />
        <activity android:name=".ui.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>