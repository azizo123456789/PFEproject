<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PfeProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_teal</item>
        <item name="colorPrimaryVariant">@color/blue_teal</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Base application theme. -->
    <style name="Theme.PfeProject.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_teal</item>
        <item name="colorPrimaryVariant">@color/blue_teal</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="PubLabelStyle">
        <item name="android:fontFamily">@font/montserrat_alternates</item>
        <item name="fontFamily">@font/montserrat_alternates</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="CatLabelStyle">
        <item name="android:fontFamily">@font/montserrat_alternates</item>
        <item name="font">@font/montserrat_alternates</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">25dp</item>
    </style>

    <style name="CatIconStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="tint">@color/blue_teal</item>
    </style>

    <style name="AppTheme.FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimaryDark">@color/blue_teal</item>
        <item name="colorAccent">@color/between_0_10</item>
        <item name="colorPrimary">@color/white</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/grey_200</item>
        <item name="actionMenuTextColor">@color/between_0_10</item>
    </style>


</resources>